{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "verbatimModuleSyntax": false
  },
  "include": ["database/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
